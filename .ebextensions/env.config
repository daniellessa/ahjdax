files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/swap.sh" :
    mode: "000777"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      if free | awk '/^Swap:/ {exit !$2}'; then
          echo "Have swap"
      else
          dd if=/dev/zero of=/swapfile bs=1024M count=8
          mkswap /swapfile
          chmod 600 /swapfile
          swapon /swapfile
      fi

